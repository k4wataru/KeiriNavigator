<div class="container mt-5">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <h1 class="text-center mb-4">ジャンル管理</h1>
      <%= form_with(model: @genre, url: admin_genres_path) do |form| %>
        <div class="form-group">
          <%= form.label :name %>
          <%= form.text_field :name, class: "form-control", placeholder: "ジャンル名を入力してください" %>
        </div>
        <div class="text-center">
          <%= form.submit "ジャンルを追加", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>

  <div class="row mt-5">
    <div class="col-md-8 offset-md-2">
      <table class="table table-striped">
        <thead>
          <tr>
            <th scope="col">名前</th>
            <th scope="col">操作</th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
            <tr>
              <td><%= link_to genre.name, edit_admin_genre_path(genre) %></td>
              <td>
                <%= link_to '削除', admin_genre_path(genre), method: :delete, data: { confirm: '削除してもよろしいですか？' }, class: 'btn btn-danger' %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
