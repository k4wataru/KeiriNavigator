<% if @genre.errors.any? %>
  <%= @genre.errors.count %>件のエラーが発生しました
  <ul>
    <% @genre.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
<div class="container mt-5">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <h1 class="text-center mb-4">ジャンル編集</h1>
      <%= form_with(model: @genre, url: admin_genre_path(@genre), method: :patch) do |form| %>
        <% if @genre.errors.any? %>
          <div id="error_explanation" class="alert alert-danger">
            <h2><%= pluralize(@genre.errors.count, "error") %> prohibited this genre from being saved:</h2>

            <ul>
              <% @genre.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="mb-3">
          <%= form.label :name, class: "form-label" %>
          <%= form.text_field :name, class: "form-control" %>
        </div>

        <div class="text-center">
          <%= form.submit 'ジャンルを更新', class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
