<div class="container">
  <h2 class="mt-4 text-center"><%= @user.name %> さんの会員情報編集</h2>
  <%= form_with model: @user, url: admin_user_path, method: :patch, html: {class: "mt-4"} do |f| %>
    <div class="row justify-content-center">
      <div class="col-md-6">
        <div class="form-group row">
          <div class="col-sm-12">
            <%= f.label :is_active, '会員ステータス', class: "col-sm-4 col-form-label text-sm-right" %>
            <div class="form-check form-check-inline">
              <%= f.radio_button :is_active, :true, class: "form-check-input" %>
              <%= f.label :is_active, "有効", class: "form-check-label" %>
            </div>
            <div class="form-check form-check-inline">
              <%= f.radio_button :is_active, :false, class: "form-check-input" %>
              <%= f.label :is_active, "退会", class: "form-check-label" %>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="row justify-content-center">
      <div class="col-md-6">
        <div class="form-group row">
          <div class="col-sm-12 text-center">
            <%= f.submit '変更を保存', class:"btn btn-success col-md-6" %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>

