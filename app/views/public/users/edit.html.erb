<div class="container mt-5">
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <div class="card">
        <div class="card-header">
          <h2>プロフィールを編集する</h2>
        </div>
        <div class="card-body">
          <%= form_with model:@user, local:true do |f| %>
            <%= render 'layouts/error', obj: @user %>
            
            <div class="form-group">
              <%= f.label :name %><br />
              <%= f.text_field :name, class: "form-control" %>
            </div>

            <div class="form-group">
              <%= f.label :email %><br />
              <%= f.email_field :email, autofocus: true, class: "form-control", autocomplete: "email" %>
            </div>

            <div class="form-group">
              <%= f.label :password %> <i>(変更しない場合は空欄のままにしてください)</i><br />
              <%= f.password_field :password, class: "form-control", autocomplete: "new-password" %>
              <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> 文字以上)</em>
              <% end %>
            </div>

            <div class="form-group">
              <%= f.label :password_confirmation %><br />
              <%= f.password_field :password_confirmation, class: "form-control", autocomplete: "new-password" %>
            </div>

            <div class="form-group">
              <%= f.label :current_password %> <i>(変更を確定するために現在のパスワードが必要です)</i><br />
              <%= f.password_field :current_password, class: "form-control", autocomplete: "current-password" %>
            </div>

            <div class="form-group">
              <%= f.label :job %><br />
              <%= f.text_field :job, class: "form-control" %>
            </div>

            <div class="form-group">
              <%= f.label :image %><br />
              <%= f.file_field :image, accept: "image/*", class: "form-control" %>
            </div>

            <div class="actions">
              <%= f.submit "更新", class: "btn btn-primary mr-2" %>
              <%= link_to "戻る", :back, class: "btn btn-secondary" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
