<div class="container">
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <div class="card">
        <div class="card-header">
          <h2>Edit Profile</h2>
        </div>
        <div class="card-body">
          <%= form_with(model: @user, url: user_registration_path, method: :patch) do |form| %>
            <div class="form-group">
              <%= form.label :email %>
              <%= form.email_field :email, class: "form-control", required: true %>
            </div>

            <div class="form-group">
              <%= form.label :password %>
              <%= form.password_field :password, class: "form-control", autocomplete: "new-password" %>
            </div>

            <div class="form-group">
              <%= form.label :password_confirmation %>
              <%= form.password_field :password_confirmation, class: "form-control", autocomplete: "new-password" %>
            </div>

            <div class="form-group">
              <%= form.label :name %>
              <%= form.text_field :name, class: "form-control" %>
            </div>

            <div class="form-group">
              <%= form.label :job %>
              <%= form.text_field :job, class: "form-control" %>
            </div>

            <div class="actions">
              <%= form.submit "Update", class: "btn btn-primary mr-2" %>
              <%= link_to "Back", user_path(@user), class: "btn btn-secondary" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>