<div class="container">
  <% groups.each do |group| %>
    <div class="card mb-3">
      <div class="row no-gutters">
        <div class="col-md-4">
          <% if group.group_image.attached? %>
            <%= image_tag group.group_image.variant(resize: "300x300"), class: "card-img" %>
          <% else %>
            <%= image_tag 'no_image.png', class: "card-img" %>
          <% end %>
        </div>
        <div class="col-md-8">
          <div class="card-body">
            <h5 class="card-title"><%= link_to group.name, group_path(group) %></h5>
            <p class="card-text"><%= group.introduction %></p>
            <p class="card-text"><small class="text-muted">メンバー数: <%= group.group_users.count %></small></p>
            <% if group.is_owned_by?(current_user) %>
              <%= link_to 'Edit', edit_group_path(group), class: "btn btn-sm btn-success" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>