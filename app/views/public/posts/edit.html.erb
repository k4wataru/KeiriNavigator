<div class="container mt-3">
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <h1>投稿編集</h1>
      <%= form_with(model: @post, url: post_path(@post), method: :patch) do |form| %>
        <div class="form-group">
          <%= form.label :投稿タイトル %>
          <%= form.text_field :title, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= form.label :内容 %>
          <%= form.text_area :content, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= form.label :genre_id, "ジャンル" %>
          <%= form.collection_select :genre_id, Genre.all, :id, :name, { prompt: "Select genre" }, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= form.submit "投稿を更新", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>