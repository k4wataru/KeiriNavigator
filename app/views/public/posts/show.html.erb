<%= stylesheet_link_tag "homes" %> 
<style>
  /* 追加のスタイルはここに記述 */
  .container {
    margin-top: 50px; /* 上部のマージンを調整 */
  }
  .card {
    border: 1px solid #ccc;
    border-radius: 5px;
    margin-bottom: 20px;
  }
  .card-body {
    padding: 20px;
  }
</style>

<div class="container">
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <div class="card">
        <div class="card-body">
          <h1><%= @post.title %></h1>
          <p>Posted by: <%= link_to @post.user.name, user_path(@post.user) %> on <%= @post.created_at.strftime("%B %d, %Y") %></p>
          <p>Genre: <%= @post.genre.name %></p>
          <p><%= @post.content %></p>
          
          <% if user_signed_in? && current_user == @post.user %>
            <%= link_to "Edit", edit_post_path(@post), class: "btn btn-primary mr-2" %>
            <%= link_to "Delete", post_path(@post), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger" %>
          <% end %>
          
          <%= link_to "Back to My Page", user_path(current_user), class: "btn btn-secondary" %>
        </div>
      </div>
      <% @post.comments.each do |comment| %>
        <div class="card">
          <div class="card-body">
            <p><%= comment.content %></p>
            <p>Commented by: <%= comment.user ? link_to(comment.user.name, user_path(comment.user)) : "Unknown" %> on <%= comment.created_at.strftime("%B %d, %Y") %></p>
            <% if user_signed_in? && current_user == comment.user %>
              <%= link_to "Delete", post_comment_path(@post, comment), method: :delete, data: { confirm: "Are you sure you want to delete this comment?" }, class: "btn btn-danger btn-sm" %>
            <% end %>
          </div>
        </div>
      <% end %>
      
      <% if user_signed_in? %>
        <div class="card">
          <div class="card-body">
            <%= form_with(model: [@post, @post.comments.build], url: post_comments_path(@post), local: true) do |form| %>
              <%= form.text_area :content, placeholder: "Add a comment...", class: "form-control mb-3" %>
              <%= form.submit "Comment", class: "btn btn-primary" %>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
